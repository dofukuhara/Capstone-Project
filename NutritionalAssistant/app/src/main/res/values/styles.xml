<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ingredient_detail_table_like">
        <item name="android:background">?android:colorBackground</item>
        <item name="android:layout_marginTop">@dimen/marging_line</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="ingredient_detail_table_like_last">
        <item name="android:background">?android:colorBackground</item>
        <item name="android:layout_marginTop">@dimen/marging_line</item>
        <item name="android:layout_marginBottom">@dimen/marging_line</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="item_list">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/double_default_padding</item>
        <item name="android:paddingBottom">@dimen/double_default_padding</item>
        <item name="android:layout_marginBottom">@dimen/double_default_padding</item>
        <item name="android:layout_marginLeft">@dimen/default_padding</item>
        <item name="android:layout_marginRight">@dimen/default_padding</item>
    </style>

</resources>
